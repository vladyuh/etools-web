    body.perf-no-animation.page
        header
            block header
            +header([{},])            
        +mobileMenu()
        main
            .pageTitle
                .container
                    .pageTitle__wrp
                        .pageTitle__image(
                            style="background-image: url(https://cdn.thewirecutter.com/wp-content/media/2021/03/allinonecomputers-2048px-00116-2x1-1.jpg?auto=webp&quality=75&crop=2:1&width=1024)"
                        )
                        h1.section-h1.pageTitle__text Устройства компьютера
                        +breadcrumb([
                            {
                                link: "index.html",
                                text: "Разделы",
                            },
                            {
                                link: "section.html",
                                text: "Устройства компьютера",
                            },
                        ])
            section.detail
                .container
                    h2.section-h2 Темы
                    .topics
                        a(href="topic.html#tab-1").topics__item
                            .topics__title Современные компьютерные устройства
                            .topics__link
                                span Перейти
                                +icons('#ic_go',24)
                        a(href="topic.html#tab-2").topics__item
