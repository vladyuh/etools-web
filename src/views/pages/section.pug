                            .topics__link
                                span Перейти
                                +icons('#ic_go',24)
                        a(href="test-results.html").topics__item
                            .topics__title Результаты теста<br> "Устройства компьютера"
                            .topics__link
                                span Перейти
                                +icons('#ic_go',24)
